<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text">
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Text.SemiBold" parent="Text">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Text.Italic" parent="Text">
        <item name="fontFamily">@font/open_sans_regular_italic</item>
    </style>

    <style name="Text.Clarify" parent="Text.Italic">
        <item name="android:textColor">@color/color_content_clarify</item>
    </style>

    <style name="Text.Item" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Item.Title" parent="Text.Bold">
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Text.Tab" parent="Text.Bold">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_content_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Row.Title" parent="Text.SemiBold">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_content_accent</item>
    </style>

</resources>