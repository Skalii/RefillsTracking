<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Text">
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Text.Italic" parent="Text">
        <item name="fontFamily">@font/open_sans_regular_italic</item>
    </style>

    <style name="Text.Clarify" parent="Text.Italic">
        <item name="android:textColor">@color/color_content_clarify</item>
    </style>

    <style name="Text.Item" parent="Text">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeStepGranularity">0.5sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Item.Title" parent="Text.Bold">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeStepGranularity">0.5sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_content_accent</item>
    </style>

    <style name="Text.Tab" parent="Text.Bold">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_content_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>